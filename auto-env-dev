#!/bin/bash

PUBLIC_IP=$(curl -s https://ipinfo.io/ip)
DOCKER_HOST_IP=$(ip r | grep 'docker0' | awk '{print $9}')

cat << EOS
ZDXSV_DNAS_PUBLIC_ADDR=${PUBLIC_IP}
ZDXSV_LOGIN_ADDR=login:80
ZDXSV_LOGIN_PUBLIC_ADDR=${PUBLIC_IP}
ZDXSV_LOBBY_ADDR=${DOCKER_HOST_IP}:8200
ZDXSV_LOBBY_RPC_ADDR=${DOCKER_HOST_IP}:8201
ZDXSV_LOBBY_PUBLIC_ADDR=${PUBLIC_IP}:8200
ZDXSV_BATTLE_ADDR=${DOCKER_HOST_IP}:8210
ZDXSV_BATTLE_RPC_ADDR=${DOCKER_HOST_IP}:3080
ZDXSV_BATTLE_PUBLIC_ADDR=${PUBLIC_IP}:8210
ZDXSV_STATUS_ADDR=status:8080
ZDXSV_DB_NAME=zdxsv.db
EOS
